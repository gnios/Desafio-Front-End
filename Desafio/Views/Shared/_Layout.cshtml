<!DOCTYPE html>
<html id="document" class="no-js document">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")

    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300,700' rel='stylesheet' type='text/css'><!-- BODY FONT -->
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'><!-- HEADINGS FONT -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="gnio-framework" class="gnio-framework no-text-shadow">
    <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->
    <div id="framework" class="framework uikit-component">

        <header id="main-header" class="section-free uk-grid">
                <div class="uk-width-1-2">
                    <div class="menu-empresa" data-jq-dropdown="#menu-empresa">
                        <span class="icon-stack icon-medium">
                            <i class="icon icon-circle icon-stack-2x"></i>
                            <i class="icon icon-user icon-stack-1x icon-inverse"></i>
                        </span>
                        <h1>Fortes Contabilidade</h1>
                        <h2>Empresa de contabilidade</h2>
                        <div id="menu-empresa" class="jq-dropdown jq-dropdown-tip">
                            <ul class="jq-dropdown-menu">
                                <li><a href="#1">Item 1</a></li>
                                <li><a href="#2">Item 2</a></li>
                                <li><a href="#3">Item 3</a></li>
                                <li class="jq-dropdown-divider"></li>
                                <li><a href="#4">Item 4</a></li>
                                <li><a href="#5">Item 5</a></li>
                                <li><a href="#5">Item 6</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="uk-width-1-2">
                    <ul class="actions">
                        <li><input type="text" /> </li>
                        <li><a href="#" title="sair"><i class="icon icon-bell-o  icon-medium"> <span class="uk-badge uk-badge-notification uk-badge-danger">8</span></i></a></li>
                        <li><a href="#" title="sair"><i class="icon icon-sign-out icon-medium"></i></a></li>
                    </ul>
                </div>
        </header>
        <!-- MAIN HEADER ENDS HERE -->
        <section id="main-section" class="section">
            <!-- MAIN SECTION STARTS HERE -->
            <div id="main-content" class="section-free">
                @RenderBody()
            </div>
        </section>

        <footer id="main-footer" class="section-free">
            <div class="wrapper">
                <span class="copyright"><strong>Blackhole</strong> - Developed by <a href="mailto:alin@html5depot.com" title="Contact the Author">Alin Seba</a> and released under <a href="http://opensource.org/licenses/MIT" target="_blank" title="MIT License">MIT</a> license</span>
                <ul class="list social with-background">
                    <li class="item twitter">
                        <a href="https://twitter.com/blackholesass" title="Twitter" data-uk-tooltip><span class="icon"></span></a>
                    </li>
                    <li class="item github">
                        <a href="https://github.com/alinseba/blackhole" title="Github" data-uk-tooltip><span class="icon"></span></a>
                    </li>
                </ul>
                <span class="version">
                    <span class="name">version:</span>
                    <strong class="value">1.11</strong>
                </span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/plugins")
    @RenderSection("scripts", required: false)
</body>
</html>
